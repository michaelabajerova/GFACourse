@using FoxClub.Models;
@model Fox;

<!doctype html>

<html>
<head>
    <meta charset="utf-8">
    <title>Fox Club</title>
    <link rel="stylesheet" href="~/Styles/style.css">
</head>
<body>
    <ul>
        <li>@Html.ActionLink("Information", "Index", (new { name = Model.Name }))</li>
        <li><a href="/login">Login</a></li>
        <li><a href="/nutritionStore">Nutrition Store</a></li>
        <li><a href="/history">Action History</a></li>
    </ul>
    <img src="~/Styles/greenfox.png" alt="GreenFox" />
    <br />
    <p>This is @Model.Name. Currently living on @Model.Food and @Model.Drink. He knows @Model.CountTrick tricks.</p>
    <h2>Known tricks</h2>
    <ul>
        @if (@Model.ListOfTricks.Count > 0)
        {
            @foreach (var item in @Model.ListOfTricks)
            {
                <li>@item</li>
            }
        }
        else
        {
            <p>You know no tricks. But you can learn some..</p>
        }
    </ul>
</body>
</html>