@using ListingToDoDb.Models.ViewModels;

<h2>ListOfAssignees</h2>
<a href="~/addAssignees">Add Assignees</a>
<table>
    <tr>
        <td><strong>ID</strong></td>
        <td><strong>NAME</strong></td>
        <td><strong>EMAIL</strong></td>
    </tr>
    @foreach (var assignee in Model)
    {
        <tr>
            <td>@assignee.Id</td>
            <td><a href="~/todosAssignees">@assignee.Name</a></td>
            <td>@assignee.Email</td>
            <td><a href="/editAssignees/@assignee.Id">Edit</a></td>
            <br />
            <td><a href="/removeAssignees/@assignee.Id">Remove</a></td>
        </tr>
    }
</table>
